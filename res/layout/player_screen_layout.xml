<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/player_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/playerbox" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/player_pic"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/player_pic"
        android:text="TextView" />

    <TextView
        android:id="@+id/player_posteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_name"
        android:layout_below="@+id/player_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/player_fantasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_posteam"
        android:layout_below="@+id/player_posteam"
        android:text="TextView" />

    <TextView
        android:id="@+id/player_bye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_fantasy"
        android:layout_below="@+id/player_fantasy"
        android:text="TextView" />

    <TextView
        android:id="@+id/player_nextgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_bye"
        android:layout_below="@+id/player_bye"
        android:text="TextView" />
    
    <LinearLayout 
        android:layout_below="@+id/player_nextgame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout" />
        

</RelativeLayout>